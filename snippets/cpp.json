{
    "fenwick": {
        "prefix": "fenwick",
        "body": [
            "// range update, point query",
            "class fenwick {",
            "    vector<int> tree;",
            "    int n;",
            "    // 1-based indexing",
            "public:",
            "    void init(vector<int>& arr) {",
            "        n = arr.size();",
            "        tree.assign(n+1, 0);",
            "        foi(1,n+1) update(i, arr[i-1]);",
            "    }",
            "    void init(int x) {",
            "        n = x;",
            "        tree.assign(n+1, 0);",
            "    }",
            "    int sum(int i) // returns value at an index",
            "    { // time comp O(logn)",
            "        int ans = 0;",
            "        for (; i > 0; i -= (i & (-i))) {",
            "            ans += tree[i];",
            "        }",
            "        return ans;",
            "    }",
            "    void update(int i, int x) // adds x at an index",
            "    {",
            "        for (; i <= n; i += (i & (-i))) {",
            "            tree[i] += x;",
            "        }",
            "    }",
            "    void range_update(int l, int r, int x) { // adds x to indices l, l+1,..., r",
            "        update(l, x), update(r+1, -x);",
            "    }",
            "};"
        ],
        "description": "Fenwick Tree: range update, point query"
    }
}
